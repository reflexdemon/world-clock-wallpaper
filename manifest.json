{
  "manifest_version": 3,
  "name": "World Clock Wallpaper",
  "version": "1.0",
  "description": "A customizable world clock wallpaper extension with multiple timezone displays",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "World Clock Wallpaper"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  }
}