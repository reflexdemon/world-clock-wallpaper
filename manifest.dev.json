{
  "manifest_version": 3,
  "name": "World Clock Wallpaper",
  "version": "1.0.0",
  "description": "Transform your new tab into a beautiful world clock display. Multiple timezones, customizable themes, and responsive design.",
  "homepage_url": "https://github.com/yourusername/world-clock-wallpaper",
  "author": "Your Name",
  "permissions": [
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "World Clock Wallpaper"
  },
  "chrome_url_overrides": {
    "newtab": "src/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}